{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server (app router)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect", "./node_modules/next/dist/bin/next"],
      "args": ["dev"],
      "env": {
        "NODE_ENV": "development"
      },
      "port": 9229,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    }
  ]
}
